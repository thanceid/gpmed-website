<!-- Mini Hearing Quiz -->
<section class="section quiz-section" id="quiz">
  <div class="container">
    <div class="quiz-container">
      <div class="quiz-header text-center">
        <span class="section-label">Γρήγορος Έλεγχος Ακοής</span>
        <h2 class="section-title">Μήπως αντιμετωπίζετε πρόβλημα ακοής;</h2>
        <p class="section-subtitle mx-auto">Απαντήστε σε 3 ερωτήσεις — χρειάζεται λιγότερο από 1 λεπτό.</p>
      </div>

      <div class="quiz-body" id="quizBody">
        <!-- Question 1 -->
        <div class="quiz-step active" data-step="1">
          <div class="quiz-question-number">1 / 3</div>
          <h3 class="quiz-question">Δυσκολεύεστε να ακούσετε σε συζητήσεις με πολλά άτομα;</h3>
          <div class="quiz-options">
            <button class="quiz-option" data-value="2" onclick="quizAnswer(this)">Ναι, συχνά</button>
            <button class="quiz-option" data-value="1" onclick="quizAnswer(this)">Μερικές φορές</button>
            <button class="quiz-option" data-value="0" onclick="quizAnswer(this)">Σπάνια ή ποτέ</button>
          </div>
        </div>

        <!-- Question 2 -->
        <div class="quiz-step" data-step="2">
          <div class="quiz-question-number">2 / 3</div>
          <h3 class="quiz-question">Ανεβάζετε συχνά την ένταση στην τηλεόραση ή το ραδιόφωνο;</h3>
          <div class="quiz-options">
            <button class="quiz-option" data-value="2" onclick="quizAnswer(this)">Ναι, συχνά</button>
            <button class="quiz-option" data-value="1" onclick="quizAnswer(this)">Μερικές φορές</button>
            <button class="quiz-option" data-value="0" onclick="quizAnswer(this)">Σπάνια ή ποτέ</button>
          </div>
        </div>

        <!-- Question 3 -->
        <div class="quiz-step" data-step="3">
          <div class="quiz-question-number">3 / 3</div>
          <h3 class="quiz-question">Ζητάτε από τους γύρω σας να επαναλαμβάνουν αυτά που λένε;</h3>
          <div class="quiz-options">
            <button class="quiz-option" data-value="2" onclick="quizAnswer(this)">Ναι, συχνά</button>
            <button class="quiz-option" data-value="1" onclick="quizAnswer(this)">Μερικές φορές</button>
            <button class="quiz-option" data-value="0" onclick="quizAnswer(this)">Σπάνια ή ποτέ</button>
          </div>
        </div>

        <!-- Result -->
        <div class="quiz-step quiz-result" data-step="result">
          <div class="quiz-result-icon" id="quizResultIcon"></div>
          <h3 class="quiz-result-title" id="quizResultTitle"></h3>
          <p class="quiz-result-text" id="quizResultText"></p>
          <a href="/contact" class="btn btn-accent btn-lg" style="margin-top: 24px;">Κλείστε Δωρεάν Ραντεβού</a>
          <button class="btn btn-outline btn-sm" style="margin-top: 12px;" onclick="resetQuiz()">Επανάληψη</button>
        </div>
      </div>
    </div>
  </div>
</section>

